<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="av.task2.entity.Project" table="project">

        <id name="id" type="java.lang.Long" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="name" type="string"/>
        <property name="customer" column="customer" type="string"/>
        <property name="duration" column="duration" type="int"/>
        <property name="methodology" column="methodology" type="string"/>


        <many-to-one name="projectManager" class="av.task2.entity.Employee" cascade="persist merge" lazy="false">
        <column name="project_manager_id"/>
        </many-to-one>

        <many-to-one name="team" class="av.task2.entity.Team" cascade="persist merge" lazy="false">
        <column name="team_id"/>
        </many-to-one>

    </class>
</hibernate-mapping>





